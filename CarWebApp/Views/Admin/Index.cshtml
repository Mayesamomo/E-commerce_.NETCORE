
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="height:10px; background:#27aae1;"></div>
<header class="bg-dark text-white py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1><i class="fas fa-cog" style="color:#27aae1;"></i> Dashboard</h1>
            </div>
            <div class="col-lg-3 mb-2">
                <a class="btn btn-primary btn-block"  asp-area="" asp-controller="Car" asp-action="Create">
                    <i class="fas fa-folder-plus"></i> Add New Car
                </a>
            </div>
            <div class="col-lg-3 mb-2">
                <a class="btn btn-info btn-block" asp-area="" asp-controller="Manufacturer" asp-action="Create">
                    <i class="fas fa-folder-plus"></i> Add New Manufacturer
                </a>
            </div>
            <div class="col-lg-3 mb-2">
                <a class="btn btn-info btn-block" asp-area="" asp-controller="Role" asp-action="Create">
                    <i class="fas fa-folder-plus"></i> Create Role
                </a>
            </div>


        </div>
    </div>
</header>
<!-- HEADER END -->
<!-- Main Area -->
<section class="container py-2 mb-4">
    <div class="row">
        <!-- Left Side Area Start -->
        <div class="col-lg-2 d-none d-md-block">
            <div class="card text-center bg-dark text-white mb-3">
                <div class="card-body">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Car" asp-action="Index"></a><h1 class="lead">Cars</h1>
                        <h4 class="display-5">
                            <i class="fas fa-car"></i>Cars
                    

                    </h4>
                </div>
            </div>
            <div class="card text-center bg-dark text-white mb-3">
                <div class="card-body">
                    <a class="nav-link text-dark lead" asp-area="" asp-controller="Manufacturer" asp-action="Index"></a> <h1 class="lead">Manufacturers</h1>
                    <h4 class="display-5">
                        <i class="fas fa-folder"></i>

                    </h4>
                </div>
            </div>
            <div class="card text-center bg-dark text-white mb-3">
                <div class="card-body">
                    <a class="nav-link text-dark lead" asp-area="" asp-controller="Role" asp-action="Index"></a><h1 class="lead">Roles</h1>
                    <h4 class="display-5">
                        <i class="fas fa-users-cog"></i>

                    </h4>
                </div>
            </div>
            
        </div>
    </div>
</section>
