@model IEnumerable<CarWebApp.Models.Car>

@{
    ViewData["Title"] = "Car Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3">
            <h3 class="my-4">Manufacturers</h3>
            @foreach (var item in Model)
            {
                <div class="list-group">
                    <a type="button" asp-controller="Manufacturer" asp-action="Details" asp-route-id="@item.Manufacturer.ManufacturerId" class="list-group-item btn btn-outline-primary">@Html.DisplayFor(modelItem => item.Manufacturer.ManufacturerName)</a>
                    <!----<a href="#" class="list-group-item">Category 2</a>
                    <a href="#" class="list-group-item">Category 3</a>-->
                    @ViewBag.Result
                </div>
            }
        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">

                        <img class="d-block img-fluid" src="~/img/slider_1_2.jpg" alt="First slide" width="1000" height="450">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/img/slider_1_4.jpg" alt="Second slide" width="1000" height="450">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/img/slider_1_61-11.png" alt="Third slide" width="1000" height="450">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src=" @Html.DisplayFor(modelItem => item.ImageUrl)" alt="image" width="1000" height="400"></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a asp-controller="Car" asp-action="Details" asp-route-id="@item.CarId"> @Html.DisplayFor(modelItem => item.Name)</a>
                                </h4>
                                <h5>@Html.DisplayFor(modelItem => item.Model)</h5>
                                <h5>@Html.DisplayFor(modelItem => item.Manufacturer.ManufacturerName)</h5>
                                <p class="card-text"><button class="active alert-success"> @Html.DisplayFor(modelItem => item.Instock)</button> </p>
                            </div>
                            <div class="card-footer">
                                <h5>
                                    ‎€@Html.DisplayFor(modelItem => item.Price)
                                </h5>
                                <div>
                                    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-carId="@item.CarId"> <i class="fas fa-shopping-cart"></i>Add to Cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->